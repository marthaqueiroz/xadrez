#include <stdio.h>

/* 
------------------------------------------------------------
FUNÇÕES RECURSIVAS: Torre, Bispo e Rainha
------------------------------------------------------------
*/

/* Função recursiva da Torre — move 5 casas para a direita */
void moverTorre(int passo, int limite) {
    if (passo > limite) return; // Caso base: parando a recursão
    printf("Direita\n");
    moverTorre(passo + 1, limite); // chamada recursiva
}

/* Função recursiva + loops aninhados para o Bispo */
void moverBispo(int vertical, int limiteVertical, int limiteHorizontal) {
    if (vertical > limiteVertical) return; // Caso base da recursão (movimento vertical completo)

    // Loop interno: movimento horizontal
    for (int horizontal = 1; horizontal <= limiteHorizontal; horizontal++) {
        printf("Cima, Direita\n");
    }

    // Chamada recursiva para continuar o movimento vertical
    moverBispo(vertical + 1, limiteVertical, limiteHorizontal);
}

/* Função recursiva da Rainha — move 8 casas para a esquerda */
void moverRainha(int passo, int limite) {
    if (passo > limite) return; // Caso base
    printf("Esquerda\n");
    moverRainha(passo + 1, limite); // chamada recursiva
}

/* 
------------------------------------------------------------
MOVIMENTO COMPLEXO: Cavalo (loops aninhados, múltiplas variáveis)
------------------------------------------------------------
*/
void moverCavalo() {
    const int casasCima = 2;
    const int casasDireita = 1;

    // Loop externo controla o movimento vertical
    for (int i = 1, j = casasCima; i <= casasCima && j > 0; i++, j--) {
        // Loop interno controla possíveis interrupções (apenas didático)
        int k = 0;
        while (k < 1) {
            printf("Cima\n");
            if (i == 2) {
                // Ao atingir o segundo movimento para cima, interrompe o interno
                break;
            }
            k++;
        }

        // continue apenas para ilustrar controle de fluxo
        if (i == 1) continue;
    }

    // Movimento final — 1 casa para a direita
    for (int m = 1; m <= casasDireita; m++) {
        printf("Direita\n");
    }
}

/* 
------------------------------------------------------------
FUNÇÃO PRINCIPAL
------------------------------------------------------------
*/
int main() {

    /* Constantes */
    const int casas_torre = 5;
    const int casas_bispo_vertical = 5;
    const int casas_bispo_horizontal = 1;
    const int casas_rainha = 8;

    /* --------- Movimento da Torre (recursividade) --------- */
    printf("Movimento da Torre:\n");
    moverTorre(1, casas_torre);

    printf("\n");

    /* --------- Movimento do Bispo (recursividade + loops aninhados) --------- */
    printf("Movimento do Bispo:\n");
    moverBispo(1, casas_bispo_vertical, casas_bispo_horizontal);

    printf("\n");

    /* --------- Movimento da Rainha (recursividade) --------- */
    printf("Movimento da Rainha:\n");
    moverRainha(1, casas_rainha);

    printf("\n");

    /* --------- Movimento do Cavalo (loops aninhados complexos) --------- */
    printf("Movimento do Cavalo:\n");
    moverCavalo();

    return 0;
}
